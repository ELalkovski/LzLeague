@model ICollection<LzLeague.Common.AdminBindingModels.UserBindingModel>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 2em">
    <div class="col-md-10 offset-md-1">
        <h2>@ViewData["Title"]</h2>
        <div id="success-msg-users" class="alert alert-success" style="display: none">
        </div>
        <div id="warning-msg-users" class="alert alert-danger" style="display: none">
        </div>
        <div class="table-responsive">
            <table id="table-users" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @Html.DisplayFor(model => model)
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        let successMsg = '@TempData["SuccessMsg"]';
        let warningMsg = '@TempData["WarningMsg"]';
        displayMsg(successMsg, 'success-msg-users');
        displayMsg(warningMsg, 'warning-msg-users');
    </script>
}