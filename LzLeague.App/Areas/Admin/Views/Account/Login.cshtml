@model Common.AdminBindingModels.LoginBindingModel
@{
    ViewData["Title"] = "Admin Login";
}


<div class="row">
    <div class="col-md-8">
        <div class="card mx-auto mt-5 shadow-lg bg-white rounded">
            <div class="card-header">
                <h2>Login</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <section>
                            <form method="post" asp-area="Admin" asp-action="Login" asp-controller="Account">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <a asp-area="" asp-action="Index" asp-controller="Home" class="btn btn-warning pull-right">Cancel</a>
                                    <button type="submit" class="btn btn-success">Log in</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}