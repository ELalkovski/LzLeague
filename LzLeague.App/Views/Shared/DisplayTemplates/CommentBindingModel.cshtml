@model LzLeague.Common.AdminBindingModels.CommentBindingModel

<li class="clearfix">
    <img src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar" alt="">
    <div class="post-comments">
        <p class="meta">@Model.PublicationDate.ToShortDateString() <span style="color: green">@Model.Author.FullName</span> @(Model.Author.Email == "emil27778@gmail.com" ? "(Admin)" : "")</p>
        <p>
            @Model.Content
        </p>
        @if (User.IsInRole("Admin"))
        {
            <a href="#" data-toggle="modal" data-target="#modal-delete-comment-@Model.Id" style="text-decoration: none">
                <i class="fas fa-minus-circle" style="color: red"></i>
            </a>
        }
    </div>
</li>

<div class="modal fade" id="modal-delete-comment-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="confirmation-modal-match-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Comment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this comment?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a btn-name="delete-comment-btn" 
                   asp-area="" 
                   asp-controller="Articles" 
                   asp-action="DeleteComment" 
                   asp-route-commentId="@Model.Id" 
                   asp-route-articleId="@Model.ArticleId" class="btn btn-danger">
                    Delete Comment
                </a>
            </div>
        </div>
    </div>
</div>